{
  "name": "messaging-app",
  "type": "module",
  "version": "1.0.0",
  "description": "An app to learn websockets",
  "main": "server/index.ts",
  "scripts": {
    "start": "node ./dist/server.js",
    "dev": "run-p dev:*",
    "dev:server": "tsx watch server/index.ts",
    "dev:client": "vite",
    "dev:css": "tailwindcss -i client/styles/input.css -o public/output.css --watch",
    "build": "run-s build:client build:server build:css",
    "build:client": "vite build",
    "build:server": "esbuild --packages=external --platform=node --format=esm --outfile=dist/server.js --bundle server/index.ts",
    "build:css": "tailwindcss -i client/styles/input.css -o public/output.css",
    "preview": "vite preview",
    "test": "NODE_ENV=test vitest",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier -w '**/*.{js,jsx,ts,tsx}'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HannahBurgoyne/messaging-app.git"
  },
  "keywords": [
    "websockets",
    "messaging"
  ],
  "author": "Hannah Burgoyne",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HannahBurgoyne/messaging-app/issues"
  },
  "homepage": "https://github.com/HannahBurgoyne/messaging-app#readme",
  "dependencies": {
    "@tanstack/react-query": "^4.35.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.17.2",
    "pg": "^8.11.3",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "@devacademy/eslint-config": "^1.9.1",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/express": "^4.17.14",
    "@types/node": "^18.15.3",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/styled-components": "^5.1.26",
    "@types/supertest": "^2.0.12",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/coverage-c8": "^0.31.4",
    "babel-plugin-styled-components": "^1.12.0",
    "esbuild": "^0.18.16",
    "eslint": "^8.10.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.1",
    "react": "^18.0.2",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0",
    "regenerator-runtime": "^0.13.7",
    "styled-components": "^5.3.1",
    "superagent": "7.1.1",
    "supertest": "^6.2.2",
    "tailwindcss": "^3.3.3",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vitest": "^0.34.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "browserslist": "> 2%, not dead",
  "engine": {
    "node": ">=18.0.0"
  }
}
